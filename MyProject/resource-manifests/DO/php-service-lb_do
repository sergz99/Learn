apiVersion: v1
kind: Service              # 1
metadata:
  name: php
annotations:
    service.beta.kubernetes.io/do-loadbalancer-protocol: "http"
    service.beta.kubernetes.io/do-loadbalancer-size-slug: "lb-large"
spec:
  type: LoadBalancer       # 2
  ports:
  - name: http
    port: 9000               # 3
    protocol: TCP          # 4
    targetPort: 9000         # 5
  selector:                # 6
    app: php       # 7
